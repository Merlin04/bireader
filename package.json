{
  "name": "bireader",
  "version": "1.0.0",
  "repository": "https://github.com/MichaelZhao21/bireader.git",
  "scripts": {
    "manifest": "esno scripts/generateManifest.js",
    "compile": "rollup -c",
    "build:ff": "yarn manifest firefox && IS_FIREFOX=true yarn compile",
    "build:chromium": "yarn manifest chromium && yarn compile",
    "dev:ff": "yarn build:ff && web-ext run -t firefox-desktop -s extension",
    "dev:chromium": "yarn build:chromium && web-ext run -t chromium -s extension",
    "package": "web-ext build -s extension --overwrite-dest",
    "package:ff": "yarn build:ff && yarn package",
    "package:chromium": "yarn build:chromium && yarn package"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "esno": "^0.16.3",
    "rollup": "^2.75.6",
    "web-ext": "^7.0.0"
  },
  "dependencies": {
    "rollup-plugin-inject-process-env": "^1.3.1",
    "webextension-polyfill": "^0.9.0"
  }
}
